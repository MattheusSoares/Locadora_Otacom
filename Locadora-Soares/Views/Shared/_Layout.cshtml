    <link rel="apple-touch-icon" sizes="144x144" href="~/Content/template/assets/images/logo_movie_rental.png">
    <!-- Retina iPhone Touch Icon-->
    <link rel="apple-touch-icon" sizes="114x114" href="~/Content/template/assets/images/logo_movie_rental.png">
    <!-- Standard iPad Touch Icon-->
    <link rel="apple-touch-icon" sizes="72x72" href="~/Content/template/assets/images/logo_movie_rental.png">
