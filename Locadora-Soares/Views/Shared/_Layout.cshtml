                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>

                                @*if (ViewBag.user_layout != "inicio")
            {
                <li class="header-icon dib">
                    <span class="user-avatar">@ViewBag.user<i class="ti-angle-down f-s-10"></i></span>
                    <div class="drop-down dropdown-profile">

                        <div class="dropdown-content-body">
                            <ul>
                                <li><a href="#"><i class="ti-pencil"></i> <span>Editar Perfil</span></a></li>
                                <li><a href="#"><i class="ti-video-camera"></i> <span>Filmes Alugados</span></a></li>

                                <li><a href="#"><i class="ti-close"></i> <span>Logout</span></a></li>
                            </ul>
                        </div>
                    </div>
                </li>
            }*@
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>






    <div class="content-wrap">
        <div class="main">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 p-r-0 title-margin-right">
                        <div class="page-header">
                            <div class="page-title">
                                <h1>@ViewBag.title_welcome<span>@ViewBag.title</span></h1>
                            </div>
                        </div>
                    </div>
                    <!-- /# column -->
                    <!-- /# column -->
                </div>
                <!-- /# row -->
                <section id="main-content">

                    @RenderBody()
