                    <div class="row">
                        <div class="col-lg-12">
                            <div class="footer">
                                <p>&copy; @DateTime.Now.Year - Locadora Soares</p>
                            </div>
                        </div>
                    </div>
                    <!-- /# row -->

                </section>
            </div>
        </div>
    </div>


