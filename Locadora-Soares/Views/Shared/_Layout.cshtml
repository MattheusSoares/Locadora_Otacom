<body class="sidebar-hide">


    <div class="sidebar sidebar-hide-to-small sidebar-shrink sidebar-gestures">
        <div class="nano">
            <div class="nano-content">

                @if (ViewBag.user_layout == "usuario")
                {
                    <div class="logo"><!-- <img src="assets/images/logo.png" alt="" /> --><span><a href="/Cliente/ReturnCliente/@ViewBag.ID_Cliente">Locadora Soares</a></span></div>
                }
                @if (ViewBag.user_layout == "admin")
                {
                    <div class="logo"><!-- <img src="assets/images/logo.png" alt="" /> --><span><a href="/Admin/AdminMain/">Locadora Soares</a></span></div>
                }
                @if (ViewBag.session_status == "nao_logado")
                {
                    <div class="logo"><!-- <img src="assets/images/logo.png" alt="" /> --><span><a href="/Home/Index/">Locadora Soares</a></span></div>
                }


                <ul>

                    @{
                        if (ViewBag.user_layout == "usuario")
                        {
                            <li class="label">Cliente</li>
                            <li class="sidebar-sub-toggle">
                                <a class="sidebar-sub-toggle"><i class="ti-user"></i> @ViewBag.user <span class="sidebar-collapse-icon ti-angle-down"></span></a>

                                <ul>
                                    <li><a href="/Cliente/EditarPerfil/@ViewBag.ID_Cliente"><i class="ti-pencil"></i> <span>Editar Perfil</span></a></li>
                                    <li><a href="/Cliente/FilmesAlugados/@ViewBag.ID_Cliente"><i class="ti-video-camera"></i> <span>Filmes Alugados</span></a></li>
                                </ul>
                            </li>

                        }



                        if (ViewBag.user_layout == "admin")
                        {

                            <li class="label">Administrador</li>

                            <li class="label">Estatísticas</li>
                            <li class="sidebar-sub-toggle">
                                <a class="sidebar-sub-toggle"><i class="ti-panel"></i>Relatórios<span class="sidebar-collapse-icon ti-angle-down"></span></a>
                                <ul>
                                    <li><a href="#"><i class="ti-pencil"></i> <span>Editar Perfil</span></a></li>
                                    <li><a href="#"><i class="ti-pencil"></i> <span>Editar Perfil</span></a></li>
                                </ul>
                            </li>
                            <li class="sidebar-sub-toggle">
                                <a class="sidebar-sub-toggle"><i class="ti-bar-chart"></i>Gráficos<span class="sidebar-collapse-icon ti-angle-down"></span></a>
                                <ul>
                                    <li><a href="#"><i class="ti-pencil"></i> <span>Editar Perfil</span></a></li>
                                    <li><a href="#"><i class="ti-pencil"></i> <span>Editar Perfil</span></a></li>
                                </ul>
                            </li>
                            <li class="label">Registros</li>
                            <li class="sidebar-sub-toggle">
                                <a class="sidebar-sub-toggle"><i class="ti-id-badge"></i>Clientes<span class="sidebar-collapse-icon ti-angle-down"></span></a>
                                <ul>
                                    <li><a href="/Admin/CadastrarCliente/"><i class="ti-save"></i> <span>Cadastrar Clientes</span></a></li>
                                    <li><a href="/Admin/ListarCliente/"><i class="ti-menu-alt"></i> <span>Listar Clientes</span></a></li>
                                </ul>
                            </li>

                            <li class="sidebar-sub-toggle">
                                <a class="sidebar-sub-toggle"><i class="ti-video-clapper"></i>Filmes<span class="sidebar-collapse-icon ti-angle-down"></span></a>
                                <ul>
                                    <li><a href="/Admin/CadastrarFilme/"><i class="ti-save"></i> <span>Cadastrar Filmes</span></a></li>
                                    <li><a href="/Admin/ListarFilme/"><i class="ti-menu-alt"></i> <span>Listar Filmes</span></a></li>
                                </ul>
                            </li>

                        }


                        if (ViewBag.session_status == "nao_logado")
                        {
                            <li class="label"></li>
                            <li class="sidebar-sub-toggle">
                                <a class="sidebar-sub-toggle"><i class="ti-home"></i> Login <span class="sidebar-collapse-icon ti-angle-down"></span></a>
                                <ul>
                                    <li>@Html.ActionLink("Usuário", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Administração", "Index", "Admin")</li>
                                </ul>
                            </li>

                        }



                    }

                    @if (ViewBag.session_status == "logado")
                    {
                        <li><a href="@Url.Action("Index", "Home")"><i class="ti-close"></i> Logout</a></li>
                    }


                </ul>
            </div>
        </div>
    </div>
