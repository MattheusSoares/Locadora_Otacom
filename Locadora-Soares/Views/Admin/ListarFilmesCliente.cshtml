@model IEnumerable<Locadora_Soares.Models.Filme>


<div class="row">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-8">
        <div class="card">
            <div class="stat-widget-two">
                <h2 align="center">Filmes Alugados</h2>
                <br /><br /><br />
                <table class="table" align="center">
                    <thead>
                        <tr>
                            <th>
                                Título
                            </th>
                            <th>
                                Ano
                            </th>
                            <th>
                                Categoria
                            </th>

                            <th>
                                Devolução Filme
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" style="text-align:center">
                                    Este cliente não possui filmes alugados
                                </td>
                            </tr>

                        }
                        else
                        {

                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ano)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Categoria)
                                    </td>
                                    <td>
                                        <form action="/Admin/DevolucaoFilme/" method="post">
                                            <input type="hidden" name="ID_Filme" id="ID_Filme" value="@Html.DisplayFor(modelItem => item.ID)" />
                                            <input type="hidden" name="ID_Cliente" id="ID_Cliente" value="@ViewBag.ID_Cliente" />
                                            <input type="submit" class="btn btn-outline-info" name="alugar" id="alugar" value="Devolver" />
                                        </form>
                                    </td>
                                </tr>

                            }
                        }


                    </tbody>
                </table>
                <br /><br /><br />

                <div align="center">
                    <a role="button" class="btn btn-primary" href="/Admin/ListarCliente/">
                        Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <br /><br /><br />
    </div>
</div>