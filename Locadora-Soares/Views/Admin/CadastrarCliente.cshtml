<div class="row">

    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="stat-widget-two">


                <h2 align="center">Cadastrar novo cliente</h2>

                <div class="col-md-12" align="left">
                    <form role="form" action="/Admin/CreateCliente/" method="post">

                        <div class="form-group">
                            <label for="InputNome">
                                Informe o nome
                            </label>
                            <input type="text" minlength="5" maxlength="50" name="nome" class="form-control" id="nome" style="width: 100%" required />
                        </div>

                        <div class="form-group">

                            <label for="InputLogin">
                                Informe o Login
                            </label>
                            <input type="text" minlength="3" maxlength="50" name="login" class="form-control" id="login" required />
                        </div>

                        <div class="form-group">

                            <label for="InputPassword">
                                Informe a senha
                            </label>
                            <input type="password" minlength="3" maxlength="50" name="senha" class="form-control" id="senha" required />
                        </div>

                        <div align="center" style="padding-top: 15px">
                            <button type="submit" class="btn btn-success">
                                Cadastrar
                            </button>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>
    <div class="col-lg-3">
    </div>
</div>
