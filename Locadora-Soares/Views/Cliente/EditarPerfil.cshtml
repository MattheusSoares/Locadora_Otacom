@model Locadora_Soares.Models.Cliente

<div class="row">

    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="stat-widget-two">

                <h2 align="center">Editar perfil</h2>

                <br />
                <div class="col-lg-12" align="left">
                    <form role="form" action="/Cliente/UpdateCliente/@Html.DisplayFor(model => model.ID)" method="post">

                        <div class="form-group">
                            <label for="InputNome">
                                Informe o nome
                            </label>
                            <input type="text" name="nome" class="form-control" id="nome" style="width: 100%" value="@Html.DisplayFor(model => model.Nome)" required />
                        </div>

                        <div class="form-group">

                            <label for="InputLogin">
                                Informe o Login
                            </label>
                            <input type="text" name="login" class="form-control" id="login" value="@Html.DisplayFor(model => model.Login)" required />
                        </div>

                        <div class="form-group">

                            <label for="InputPassword">
                                Informe a senha
                            </label>
                            <input type="password" name="senha" class="form-control" id="senha" value="@Html.DisplayFor(model => model.Senha)" required />
                        </div>

                        <div align="center" style="padding-top: 15px">
                            <button type="submit" class="btn btn-success">
                                Editar
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <div class="col-lg-3">
    </div>
</div>
